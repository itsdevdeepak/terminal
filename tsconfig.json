{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2020",
    "target": "ES2020",
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
